<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayDayHelpOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PayDayHelpOnline.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PayDayHelpOnline</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @ViewData["Title"]
                </div>
            </div>
        </nav>
    </header>

    <aside>
        <div class="sidebar">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-column">
                        <!-- Opción principal -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Inicio">Inicio</a>
                        </li>

                        <!-- Menú desplegable -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" data-bs-toggle="collapse" href="#submenu-qhdn" role="button" aria-expanded="false" aria-controls="submenu-qhdn">
                                ¿Qué hay de nuevo?
                            </a>
                            <div class="collapse" id="submenu-qhdn">
                                <ul class="navbar-nav flex-column ms-3">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="#subtopic1">Subtópico 1</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" href="#subtopic2">Subtópico 2</a>
                                    </li>
                                </ul>
                            </div>
                        </li>

                        <!-- Otra opción principal -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="PayDayCloud">PayDayCloud</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </aside>


    <div class="main-content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PayDayHelpOnline - <a href="https://www.payday.com.pa/">PayDay</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
